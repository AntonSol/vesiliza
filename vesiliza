let array=['пудж','дерево','зуб' ]
let pickWord=(a)=>{
//случайное слово
let x=a[Math.floor(Math.random()*a.length)]
return x
}
let setupAnswerArray =(a)=>{
    //массив из загаданного слова
let x=[]
for (let i=0;i<a.length;i++){
x.push(a[i])
} 
return x
}// пушит слово а над еще скрыть буквы

